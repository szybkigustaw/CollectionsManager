<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CollectionsManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CollectionsManager.Pages"
    Title="CollectionsManager"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Add Collection"
        ContentTemplate="{DataTemplate local:AddCollection}"
        Route="AddCollection" />

    <ShellContent
        Title="Edit Collection"
        ContentTemplate="{DataTemplate local:EditCollection}"
        Route="EditCollection" />

    <ShellContent
        Title="Add Item"
        ContentTemplate="{DataTemplate local:AddItem}"
        Route="AddItem" />

    <ShellContent
        Title="Collection Summary"
        ContentTemplate="{DataTemplate local:CollectionSummary}"
        Route="Summary" />

</Shell>
